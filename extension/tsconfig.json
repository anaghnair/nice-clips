{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@extension/*": ["./src/*"]
    },
    "types": ["chrome", "node"]
  },
  "include": [
    "src/**/*",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}